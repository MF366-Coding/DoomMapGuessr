<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DoomMapGuessr.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:strings="clr-namespace:DoomMapGuessr.Strings"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="710"
        x:Class="DoomMapGuessr.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Icon.ico"
        Title="{x:Static strings:Resources.App_TitleName}">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<SplitView IsPaneOpen="{Binding IsSidebarOpen}"
	           OpenPaneLength="250"
	           CompactPaneLength="46.5"
	           DisplayMode="CompactInline">

		<SplitView.Pane>

			<Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *" Margin="8">
				<Button Grid.Row="0" Classes="nav" Command="{Binding NavigateCommand}"
				        CommandParameter="ToggleSidebarPane">
					<PathIcon Data="{DynamicResource Geometry.Menu_600}" Width="16" Height="16" />
				</Button>

				<Button Grid.Row="1" Classes="nav" Command="{Binding NavigateCommand}" CommandParameter="Home">
					<StackPanel>
						<PathIcon Data="{DynamicResource Geometry.Home_400}" Width="16" Height="16" />
						<TextBlock Text="{x:Static strings:Resources.Home}" />
					</StackPanel>
				</Button>

				<Button Grid.Row="2" Classes="nav" Command="{Binding NavigateCommand}" CommandParameter="GuesserMode">
					<StackPanel>
						<PathIcon Data="{DynamicResource Geometry.CheckCircle_400}" Width="16" Height="16" />
						<TextBlock Text="{x:Static strings:Resources.GuesserMode}" />
					</StackPanel>
				</Button>

				<Button Grid.Row="3" Classes="nav" Command="{Binding NavigateCommand}" CommandParameter="GeoMode">
					<StackPanel>
						<PathIcon Data="{DynamicResource Geometry.LocationOn_400}" Width="16" Height="16" />
						<TextBlock Text="{x:Static strings:Resources.GeoMode}" />
					</StackPanel>
				</Button>

				<Button Grid.Row="4" Classes="nav" Command="{Binding NavigateCommand}" CommandParameter="AchievementsUnlockables">
					<StackPanel>
						<PathIcon Data="{DynamicResource Geometry.Trophy_400}" Width="16" Height="16" />
						<TextBlock Text="{x:Static strings:Resources.AchievementsUnlockables}" />
					</StackPanel>
				</Button>

				<Button Grid.Row="5" Classes="nav" VerticalAlignment="Bottom" Command="{Binding NavigateCommand}"
				        CommandParameter="Settings">
					<StackPanel>
						<PathIcon Data="{DynamicResource Geometry.Settings_400}" Width="16" Height="16" />
						<TextBlock Text="{x:Static strings:Resources.Settings}" />
					</StackPanel>
				</Button>
			</Grid>

		</SplitView.Pane>

		<SplitView.Content>
			<ContentControl Margin="8" Content="{Binding CurrentPage}" />
		</SplitView.Content>

	</SplitView>
</Window>