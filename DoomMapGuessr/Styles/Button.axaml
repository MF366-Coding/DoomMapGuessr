<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20">
			<StackPanel Orientation="Vertical" Spacing="4">
				<Button>Regular Button</Button>
				<Button Classes="primary">Primary Button</Button>
				<Button Classes="destructive">Destructive Button</Button>
				<Button Classes="nav-button">Nav Button (Only text)</Button>
				<Button Classes="nav-button icon">&#xe834;</Button>
				<Button Classes="nav-button icon">terminal map cached downloading</Button>
				<Button Classes="nav-button">
					<TextBlock>
						<Run Classes="icon">&#xe834;</Run>
						<Run Classes="nav-text">Icon by Unicode Entry Point (e834)</Run>
					</TextBlock>
				</Button>
				<Button Classes="nav-button">
					<TextBlock>
						<Run Classes="icon">TERMINAL</Run>
						<Run Classes="nav-text">Icon by Name (terminal)</Run>
					</TextBlock>
				</Button>
				<Button HorizontalAlignment="Right" Classes="primary" Padding="2">
					<TextBlock>
						<Run Classes="icon">save</Run>
						<Run Classes="icon-text" Text="kkjkjhkh" />
					</TextBlock>
				</Button>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<Style Selector="Button.primary, Button[IsDefault=true]">
		<Setter Property="Background" Value="{DynamicResource Brush.Primary}" />
	</Style>

	<Style Selector="Button.destructive">
		<Setter Property="Background" Value="{DynamicResource Brush.Destructive}" />
		<Setter Property="Foreground" Value="{DynamicResource Color.TextAlt}" />
		<Setter Property="FontWeight" Value="{DynamicResource Font.IdealWeight}" />
	</Style>

	

</Styles>
