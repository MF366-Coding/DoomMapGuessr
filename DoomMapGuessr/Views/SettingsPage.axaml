<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DoomMapGuessr.ViewModels"
             xmlns:strings="clr-namespace:DoomMapGuessr.Strings"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DoomMapGuessr.Views.SettingsPage"
             x:DataType="vm:SettingsPageViewModel">
	<Design.DataContext>
		<vm:SettingsPageViewModel />
	</Design.DataContext>

	<Grid RowDefinitions="Auto, *, Auto">
		<StackPanel Grid.Row="0" Margin="4"  Orientation="Horizontal" Spacing="4">
			<TextBlock Classes="h1" TextAlignment="Center" FontFamily="{StaticResource MaterialRounded}">settings</TextBlock>
			<TextBlock Classes="h1" Text="{x:Static strings:Resources.Settings}" />
		</StackPanel>
		<ScrollViewer Grid.Row="1">
			<Grid RowDefinitions="Auto, Auto, Auto, *">
				<Border Grid.Row="0" Classes="card">
					<StackPanel Orientation="Vertical" Spacing="2">
						<StackPanel Orientation="Horizontal" Spacing="4">
							<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">globe</TextBlock>
							<TextBlock Classes="h2" Text="{x:Static strings:Resources.Language}" />
						</StackPanel>
						<StackPanel Orientation="Horizontal" Spacing="8">
							<TextBlock Margin="24,8,0,0" VerticalAlignment="Center" TextAlignment="Right"
							           Text="{x:Static strings:Resources.Settings_Language_InputFieldTitle}" />
							<ComboBox Margin="0,8,0,0" SelectedIndex="{Binding CurrentIndex}" ItemsSource="{Binding LanguageComboBoxItems}" />
						</StackPanel>
					</StackPanel>
				</Border>
				<Border Grid.Row="1" Classes="card">
					<StackPanel Orientation="Vertical" Spacing="2">
						<StackPanel Orientation="Horizontal" Spacing="4">
							<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">brush</TextBlock>
							<TextBlock Classes="h2" Text="{x:Static strings:Resources.Settings_AppInterface}" />
						</StackPanel>
						<StackPanel Orientation="Vertical" Spacing="8">
							<ToggleSwitch Margin="24,8,0,0" OnContent="{x:Static strings:Resources.Settings_GUI_UseCustomTheme}"
							              OffContent="{x:Static strings:Resources.Settings_GUI_UseCustomTheme}"
							              IsChecked="{Binding CustomTheme}" />
							<ToggleSwitch Name="DarkModeToggleSwitch" Margin="48,0,0,0"
							              OnContent="{x:Static strings:Resources.Settings_GUI_ThemingDarkMode}"
							              OffContent="{x:Static strings:Resources.Settings_GUI_ThemingDarkMode}"
							              IsChecked="{Binding DarkMode}"
							              IsEnabled="{Binding CustomTheme}" />
						</StackPanel>
					</StackPanel>
				</Border>
				<Border Grid.Row="2" Classes="card">
					<StackPanel Orientation="Vertical" Spacing="2">
						<StackPanel Orientation="Horizontal" Spacing="4">
							<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">image</TextBlock>
							<TextBlock Classes="h2" Text="{x:Static strings:Resources.Settings_DoomScreenshots}" />
						</StackPanel>
						<TextBlock Classes="h3" Margin="24,8,0,8" Text="{x:Static strings:Resources.Settings_AspectRatio}" />
						<StackPanel Orientation="Horizontal" Spacing="8">
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center" IsChecked=""
							             Content="{x:Static strings:Resources.Settings_AspectRatio_MaintainProportions}" />
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">16:9</RadioButton>
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">4:3</RadioButton>
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">1:1</RadioButton>
						</StackPanel>
						<TextBlock Classes="h3" Margin="24,8,0,8" Text="{x:Static strings:Resources.Color}" />
						<StackPanel Orientation="Vertical" Spacing="8">
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center"
							             Content="{x:Static strings:Resources.Settings_Color_MaintainColor}" />
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center"
							             Content="{x:Static strings:Resources.Settings_Color_Protanopia}">
							</RadioButton>
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center"
							             Content="{x:Static strings:Resources.Settings_Color_Deuteranopia}">
							</RadioButton>
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center"
							             Content="{x:Static strings:Resources.Settings_Color_Tritanopia}">
							</RadioButton>
							<RadioButton Margin="48,0,0,0" VerticalAlignment="Center"
							             Content="{x:Static strings:Resources.Settings_Color_Achromatopsia}">
							</RadioButton>
						</StackPanel>
						<TextBlock Classes="h3" Margin="24,8,0,8" Text="{x:Static strings:Resources.Settings_DoomScreenshots_SourcesBlacklist}"></TextBlock>
						<StackPanel Orientation="Vertical" Spacing="8" Margin="48,0,0,0">
							<ListBox MinWidth="50" CornerRadius="10">
								<ListBoxItem>google.com</ListBoxItem>
							</ListBox>
							<Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto">
								<Button Grid.Column="0" Margin="4">
									<StackPanel>
										<TextBlock Classes="icon">&#xf3dd;</TextBlock>
										<TextBlock Classes="icon-text" Text="{x:Static strings:Resources.Add}" />
									</StackPanel>
								</Button>
								<Button Grid.Column="1" Margin="4">
									<StackPanel>
										<TextBlock Classes="icon">edit</TextBlock>
										<TextBlock Classes="icon-text" Text="{x:Static strings:Resources.Edit}" />
									</StackPanel>
								</Button>
								<Button Grid.Column="3" Margin="4">
									<StackPanel>
										<TextBlock Classes="icon">delete</TextBlock>
										<TextBlock Classes="icon-text" Text="{x:Static strings:Resources.Remove}" />
									</StackPanel>
								</Button>
								<Button Grid.Column="4" Classes="destructive" Margin="4">
									<StackPanel>
										<TextBlock Classes="icon">mop</TextBlock>
										<TextBlock Classes="icon-text" Text="{x:Static strings:Resources.RemoveAll}" />
									</StackPanel>
								</Button>
							</Grid>
						</StackPanel>
					</StackPanel>
				</Border>
			</Grid>
		</ScrollViewer>
		<Button Grid.Row="2" Classes="primary" Margin="8" HorizontalAlignment="Right" Command="{Binding SaveSettingsCommand}">
			<StackPanel>
				<TextBlock Classes="icon">save</TextBlock>
				<TextBlock Text="{x:Static strings:Resources.Save}" />
			</StackPanel>
		</Button>
	</Grid>

</UserControl>