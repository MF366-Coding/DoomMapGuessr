<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DoomMapGuessr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DoomMapGuessr.Views.SettingsPage"
             x:DataType="vm:SettingsPageViewModel">
	<Design.DataContext>
		<vm:SettingsPageViewModel />
	</Design.DataContext>

	<ScrollViewer>
		<Grid RowDefinitions="Auto, Auto, Auto, Auto, *">
			<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="4">
				<TextBlock Classes="h1" TextAlignment="Center" FontFamily="{StaticResource MaterialRounded}">settings</TextBlock>
				<TextBlock Classes="h1">Settings</TextBlock>
			</StackPanel>
			<Border Grid.Row="1" Classes="card">
				<StackPanel Orientation="Vertical" Spacing="2">
					<StackPanel Orientation="Horizontal" Spacing="4">
						<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">globe</TextBlock>
						<TextBlock Classes="h2">Language</TextBlock>
					</StackPanel>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Margin="24,8,0,0" VerticalAlignment="Center" TextAlignment="Right">App Language:</TextBlock>
						<ComboBox Margin="0,8,0,0" PlaceholderText="Same as system" />
					</StackPanel>
				</StackPanel>
			</Border>
			<Border Grid.Row="2" Classes="card">
				<StackPanel Orientation="Vertical" Spacing="2">
					<StackPanel Orientation="Horizontal" Spacing="4">
						<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">brush</TextBlock>
						<TextBlock Classes="h2">App Interface</TextBlock>
					</StackPanel>
					<StackPanel Orientation="Vertical" Spacing="8">
						<ToggleSwitch Margin="24,8,0,0" OnContent="Use system theme" OffContent="Use system theme" />
						<ToggleSwitch Name="DarkModeToggleSwitch" Margin="48,0,0,0" OnContent="Dark mode" OffContent="Dark mode"></ToggleSwitch>
					</StackPanel>
				</StackPanel>
			</Border>
			<Border Grid.Row="3" Classes="card">
				<StackPanel Orientation="Vertical" Spacing="2">
					<StackPanel Orientation="Horizontal" Spacing="4">
						<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">image</TextBlock>
						<TextBlock Classes="h2">Screenshots</TextBlock>
					</StackPanel>
					<TextBlock Classes="h3" Margin="24,8,0,8">Aspect Ratio</TextBlock>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Maintain Proportions</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">16:9</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">4:3</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">1:1</RadioButton>
					</StackPanel>
					<TextBlock Classes="h3" Margin="24,8,0,8">Color</TextBlock>
					<StackPanel Orientation="Vertical" Spacing="8">
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Maintain Color</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Deuteranopia (green-blindness)</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Protanopia (red-blindness)</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Tritanopia (blue-blindness)</RadioButton>
						<RadioButton Margin="48,0,0,0" VerticalAlignment="Center">Achromatopsia (monochromacy)</RadioButton>
					</StackPanel>
					<TextBlock Classes="h3" Margin="24,8,0,8">Block Screenshot Sources</TextBlock>
					<StackPanel Orientation="Vertical" Spacing="8" Margin="48,0,0,0">
						<ListBox MinWidth="50" CornerRadius="10">
							<ListBoxItem>google.com</ListBoxItem>
						</ListBox>
						<Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto">
							<Button Grid.Column="0" Margin="4">
								<TextBlock Classes="body">
									<Run FontFamily="{StaticResource MaterialRounded}">&#xf3dd;</Run>
									<Run>Add</Run>
								</TextBlock>
							</Button>
							<Button Grid.Column="1" Margin="4">
								<TextBlock Classes="body">
									<Run FontFamily="{StaticResource MaterialRounded}">edit</Run>
									<Run>Edit</Run>
								</TextBlock>
							</Button>
							<Button Grid.Column="3" Margin="4">
								<TextBlock Classes="body">
									<Run FontFamily="{StaticResource MaterialRounded}">delete</Run>
									<Run>Remove</Run>
								</TextBlock>
							</Button>
							<Button Grid.Column="4" Classes="destructive" Margin="4">
								<TextBlock Classes="body">
									<Run FontFamily="{StaticResource MaterialRounded}">mop</Run>
									<Run>Remove All</Run>
								</TextBlock>
							</Button>
						</Grid>
					</StackPanel>
				</StackPanel>
			</Border>
		</Grid>
	</ScrollViewer>

</UserControl>