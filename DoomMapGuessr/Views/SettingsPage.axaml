<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DoomMapGuessr.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DoomMapGuessr.Views.SettingsPage"
             x:DataType="vm:SettingsPageViewModel">
	<Design.DataContext>
		<vm:SettingsPageViewModel />
	</Design.DataContext>

	<ScrollViewer>
		<Grid RowDefinitions="Auto, Auto">
			<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="4">
				<TextBlock Classes="h1" TextAlignment="Center" FontFamily="{StaticResource MaterialRounded}">settings</TextBlock>
				<TextBlock Classes="h1">Settings</TextBlock>
			</StackPanel>
			<Border Grid.Row="1" Classes="card">
				<StackPanel Orientation="Vertical" Spacing="2">
					<StackPanel Orientation="Horizontal" Spacing="4">
						<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">globe</TextBlock>
						<TextBlock Classes="h2">Language</TextBlock>
					</StackPanel>
					<ToggleSwitch Margin="16,0,0,0" OnContent="Use system language if possible" OffContent="Use system language if possible"></ToggleSwitch>
				</StackPanel>
			</Border>
		</Grid>
	</ScrollViewer>

</UserControl>