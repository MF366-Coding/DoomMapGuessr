<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:strings="clr-namespace:DoomMapGuessr.Strings"
		mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
		Width="300" Height="150"
		WindowStartupLocation="CenterOwner"
		CanResize="False"
		x:Class="DoomMapGuessr.NoInternetDialog">
	<Border Padding="20">
		<StackPanel Orientation="Vertical" Spacing="8" VerticalAlignment="Center">
			<PathIcon Data="{DynamicResource Geometry.NoWifi_600}"
					  Width="64"
					  Height="64"
					  Foreground="{DynamicResource Color.Text}" />
			<TextBlock Classes="h3"
					   Text="{x:Static strings:Resources.NoConnection}"
					   HorizontalAlignment="Center" />
			<Button Classes="primary"
					HorizontalAlignment="Center"
					Content="{x:Static strings:Resources.Retry}"
					Click="OnRetryButtonClick" />
		</StackPanel>
	</Border>
</Window>
