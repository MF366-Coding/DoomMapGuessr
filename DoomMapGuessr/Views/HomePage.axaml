<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:DoomMapGuessr.ViewModels"
			 xmlns:strings="clr-namespace:DoomMapGuessr.Strings"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="DoomMapGuessr.Views.HomePage"
			 x:DataType="vm:HomePageViewModel">
	<Design.DataContext>
		<vm:HomePageViewModel />
	</Design.DataContext>

	<Grid ColumnDefinitions="*, Auto">
		<Grid Grid.Column="0" RowDefinitions="Auto, Auto, *, Auto">
			<Border Grid.Row="0" Classes="card">
				<Border.Background>
					<ImageBrush Source="avares://DoomMapGuessr/Assets/Backgrounds/DOOM_TITLEPIC.png"
								Opacity="0.3"
								Stretch="UniformToFill"/>
				</Border.Background>
				<StackPanel Orientation="Horizontal"
							Spacing="8"
							VerticalAlignment="Bottom"
							HorizontalAlignment="Stretch">
					<PathIcon Data="{DynamicResource Geometry.Trophy_600}" Width="64" Height="64" />
					<StackPanel>
						<TextBlock Classes="display" Text="{x:Static strings:Resources.Flavor_Unlockables}" />
						<TextBlock Text="{x:Static strings:Resources.Flavor_Unlockables_Description}" />
					</StackPanel>
					<Button Classes="circle" Width="64" Height="64" HorizontalAlignment="Right">
						<PathIcon Data="{DynamicResource Geometry.ArrowForward_600}" Width="32" Height="32" />
						<!-- todo: this bs -->
					</Button>
				</StackPanel>
			</Border>
		</Grid>
		<Grid Grid.Column="1" RowDefinitions="*, Auto, Auto, *">
			<Border Grid.Row="0" Classes="card">
				<StackPanel Orientation="Vertical" Spacing="2">
					<StackPanel Orientation="Horizontal" Spacing="4">
						<TextBlock Classes="h2" FontFamily="{StaticResource MaterialRounded}">brush</TextBlock>
						<TextBlock Classes="h2" Text="{x:Static strings:Resources.Settings_AppInterface}" />
					</StackPanel>
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</UserControl>